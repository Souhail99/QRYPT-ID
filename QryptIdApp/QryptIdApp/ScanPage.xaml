        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label 
                          HorizontalOptions="FillAndExpand" 
                          FontFamily="arl"
                          Text="Admin n°67478" 
                          TextColor="White" 
                          FontSize="25" 
                          HorizontalTextAlignment="Center"
