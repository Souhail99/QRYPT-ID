                          Margin="20"
                          HorizontalOptions="FillAndExpand" 
                          FontFamily="arl"
                          Text="Commissariat de Police - 75017"  
                          TextColor="White" 
                          FontSize="18" 
                          HorizontalTextAlignment="Center"
